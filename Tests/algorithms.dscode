FUNCTION verifyICAO (code):
BEGIN
    IF len(code) == 4 THEN
        FOR letter in code:
            IF isdigit(letter) THEN
                RETURN False
            ENDIF   
        NEXT code
        ENDFOR
    ELSE
        RETURN False
    ENDIF
    RETURN True
END

